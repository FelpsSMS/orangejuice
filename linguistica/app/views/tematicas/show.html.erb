<p id="notice"><%= notice %></p>

<h1 align='center'>Lista de Tematicas</h1>

<div class="panel panel-default" style='width:70%;margin-left:auto;margin-right:auto'>

 <div class="panel-body">
 
	<table class="table">
		<tr>
		
			<td><b>Titulo</b></td>
			<td><b>Descrição</b></td>
			<td><b>Opções</b></td>
			
		</tr>
		
		<tr> <% @tematicas.each do |t| %>
		<td><%= t.tematica_titulo %></td>
		<td><%= t.tematica_descricao %></td>
		<td><%= link_to "Editar" , :action => "edit", :id => t.id %> | <%= link_to "Excluir", t, data: { confirm: "Você realmente quer deletar essa tematica?" }, :method => :delete %></td>
		</tr>
		
		
		<% end %>
		
	</table>
	<hr/>
 
 <%= link_to "Adicionar Tematica", new_tematica_path %>
 </div>

</div>


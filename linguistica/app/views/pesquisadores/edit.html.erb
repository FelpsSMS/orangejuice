<h1 align='center'>Editar Pesquisador</h1>

<%= simple_form_for(@pesquisador, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="panel panel-default" style='width:70%;margin-left:auto;margin-right:auto'>
  <div class="panel-body">
	
	
  <br>
	<div style='width:70%;margin-left:auto;margin-right:auto'>
		<%= f.input :pesquisador_nome, label: "Nome", :placeholder => "Digite o nome o pesquisador aqui" %>
	</div>
  <br>
  
  <div style='width:70%;margin-left:auto;margin-right:auto'>
		<%= f.input :pesquisador_cnpq, label: "CNPq", :placeholder => "Digite o CNPq aqui" %>
	</div>
  <br>
  
  <div style='width:70%;margin-left:auto;margin-right:auto'>
		<%= f.input :pesquisador_contato, label: "Contato", :placeholder => "Digite o contato aqui" %>
	</div>
  <br>
  
  <div style='width:70%;margin-left:auto;margin-right:auto'>
		 <%= f.hint "Selecione a foto de perfil" %>
		 
	
		 <%= image_tag @pesquisador.foto.url(:small) %><br><br>

		 
		 <%= f.file_field :foto %>
		 </div>
  <br>
 <div style='width:70%;margin-left:auto;margin-right:auto'>
	 <%= f.button :submit,"Editar Pesquisador", class: "my-button" %>
	</div>
	 
  
  
  </div>
  </div>
  
 
<% end %>



